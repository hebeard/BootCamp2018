\end_layout

\begin_layout Description
(i) If 
\begin_inset Formula $S,T\in\L(V;W)$
\end_inset

, then 
\begin_inset Formula $(S+T)\s=S\s+T\s$
\end_inset

 and 
\begin_inset Formula $(\alpha T)\s=\bar{\alpha}T\s$
\end_inset

, 
\begin_inset Formula $\alpha\in\F$
\end_inset

.
\end_layout

\begin_layout Description
(ii) If 
\begin_inset Formula $S\in\L(V;W)$
\end_inset

, then 
\begin_inset Formula $(S\s)\s=S$
\end_inset

.
\end_layout

\begin_layout Description
(iii) If 
\begin_inset Formula $S,T\in\L(V)$
\end_inset

, then 
\begin_inset Formula $(ST)\s=T\s S\s$
\end_inset

.
\end_layout

\begin_layout Description
(iv) If 
\begin_inset Formula $T\in\L(V)$
\end_inset

 and 
\begin_inset Formula $T$
\end_inset

 is invertible, then 
\begin_inset Formula $(T\s)^{-1}=(T^{-1})\s.$
\end_inset


\end_layout

\end_inset


