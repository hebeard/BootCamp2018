status open

\begin_layout Plain Layout
\begin_inset Formula $\Question$
\end_inset

Let 
\begin_inset Formula $A\in M_{n}(\C)$
\end_inset

 be a normal matrix with eigenvalues 
\begin_inset Formula $\left(\lambda_{1},\ldots\lambda_{n}\right)$
\end_inset

 and corresponding orthonormal eigenvectors 
\begin_inset Formula $\left(\v x_{1},\ldots\v x_{n}\right).$
\end_inset

 
\end_layout

\begin_layout Enumerate
Show that the identity matrix can be written 
\begin_inset Formula $I=\v x_{1}\v x_{1}\H+\cdots+\v x_{n}\v x_{n}\H.$
\end_inset

 
\emph on
Hint
\emph default
: What is 
\begin_inset Formula $\left(\v x_{1}\v x_{1}\H+\cdots+\v x_{n}\v x_{n}\H\right)\v x_{j}$
\end_inset

?
\end_layout

\begin_layout Enumerate
Show that 
\begin_inset Formula $A$
\end_inset

 can be written 
\begin_inset Formula $A=\lambda_{1}\v x_{1}\v x_{1}\H+\cdots+\lambda_{n}\v x_{n}\v x_{n}\H$
\end_inset

.
 This is called an 
\emph on
outer product expansion
\emph default
.
 
\end_layout

\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Newline newline
\end_inset


\begin_inset Formula $\Answer$
\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $\v x_{j}\H\v x_{i}=0$
\end_inset

 if 
\begin_inset Formula $i\neq j$
\end_inset

 by orthonormality, so 
\begin_inset Formula $\left(\sum_{i=1}^{n}\v x_{i}\v x_{i}\H\right)\v y=\v y$
\end_inset

 for some 
\begin_inset Formula $\v y$
\end_inset

 gives us 
\begin_inset Formula 
\begin{eqnarray*}
\left(\sum_{i=1}^{n}\v x_{i}\v x_{i}\H\right)\left(\sum_{i=1}^{n}\alpha_{i}\v x_{i}\right) & = & \sum_{i=1}^{n}\v x_{i}\v x\H\v x_{i}\alpha_{i}\\
 & = & \sum_{i=1}^{n}\v x_{i}\alpha_{i}\\
 & = & \usub{\sum_{i=1}^{n}\alpha_{i}\v x_{i}}{\v y}{},
\end{eqnarray*}

\end_inset

 
\begin_inset Formula $\qed$
\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $\;$
\end_inset


\begin_inset Formula 
\begin{eqnarray*}
A\v y & = & A\left(\sum_{i=1}^{n}\alpha_{i}\v x_{i}\right)\\
 & = & \sum_{i=1}^{n}\alpha_{i}A\v x_{i}\\
 & = & \sum_{i=1}^{n}\alpha_{i}\lambda_{i}\v x_{i}
\end{eqnarray*}

\end_inset

 and 
\begin_inset Formula 
\begin{eqnarray*}
\usub{\left(\sum_{i=1}^{n}\lambda_{i}\v x_{i}\v x_{i}\H\right)}A{}{\v y} & = & \left(\sum_{i=1}^{n}\lambda_{i}\v x_{i}\v x_{i}\H\right)\left(\sum_{i=1}^{n}\alpha_{i}\v x_{i}\right)\\
 & = & \sum_{i=1}^{n}\lambda_{i}\v x_{i}\v x_{i}\H\v x_{i}\alpha_{i}\\
 & = & \sum_{i=1}^{n}\alpha_{i}\lambda_{i}\v x_{i}
\end{eqnarray*}

\end_inset


\begin_inset Formula $\qed$
\end_inset


\end_layout

\begin_layout Standard
 
\begin_inset Formula 
\[
\]

\end_inset


\end_layout

\begin_layout Section*

\family sans
\color blue
Exercise 4.27.
\end_layout

\begin_layout Standard
\begin_inset Box Shaded
